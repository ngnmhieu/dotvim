source $HOME/.vim/vimrc_common

set clipboard=unnamedplus

au BufNewFile,BufRead *.html,*.php :set fileencoding=iso-8859-15

au BufNewFile,BufRead *.css :set tabstop=2
au BufNewFile,BufRead *.css :set shiftwidth=2
au BufNewFile,BufRead *.css :set softtabstop=2

au BufNewFile,BufRead *.php :set softtabstop=4
au BufNewFile,BufRead *.php :set tabstop=4
au BufNewFile,BufRead *.php :set shiftwidth=4

au BufNewFile,BufRead *.js :set softtabstop=4
au BufNewFile,BufRead *.js :set tabstop=4
au BufNewFile,BufRead *.js :set shiftwidth=4

"@@@@@@@@@@@@
" Taglist
"@@@@@@@@@@@@
nnoremap <silent> <F8> :TlistToggle<CR>
