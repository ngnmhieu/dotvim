source ~/.vim/vimrc

" enable vim-surround
set surround

" enable multi cursor
set multiple-cursors
map <C-m> <A-n>
map <C-p>  <A-p>
map <C-x>  <A-x>
map g<C-n> g<A-n>

" IntelliJ shortcuts (for all actions, execute :actionlist
map <leader>gb :action Annotate<CR>
map <leader>] :action VcsShowNextChangeMarker<CR>
map <leader>[ :action VcsShowPrevChangeMarker<CR>
map <leader>f :action ReformatWithPrettierAction<CR>
map <leader>r :action RenameElement<CR>

map <C-o> :action Back<CR>
map <C-i> :action Forward<CR>
nmap % :action EditorMatchBrace<CR>
map <leader>gi :action GotoImplementation<CR>
map <leader>gs :action EditSource<CR>
map <leader>gu :action FindUsages<CR>
map <leader>gh :action TypeHierarchy<CR>
