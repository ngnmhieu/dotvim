source ~/.vim/vimrc

" enable vim-surround
set surround

" enable multi cursor
set multiple-cursors
map <C-m> <A-n>
map <C-p>  <A-p>
map <C-x>  <A-x>
map g<C-n> g<A-n>

" IntelliJ shortcuts
map <C-h> :action TypeHierarchy<CR>
map <leader>gb :action Annotate<CR>
map <leader>] :action VcsShowNextChangeMarker<CR>
map <leader>[ :action VcsShowPrevChangeMarker<CR>
