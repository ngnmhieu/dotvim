PLATFORM=$(uname)

if [[ "$PLATFORM" == 'Linux' ]]; then
  alias ls='ls --color=auto'
elif [[ "$PLATFORM" == 'Darwin' ]]; then
  alias ls='ls -G'
fi

# common aliases
alias l='ls' 
alias ll='l -lh'
alias la='l -lah'
alias x='exit'
alias cd..='cd ../'                 # Go back 1 directory level (for fast typers)
alias ..='cd ../'                   # Go back 1 directory level
alias ...='cd ../../'               # Go back 2 directory levels
alias ....='cd ../../../'             # Go back 3 directory levels
alias .....='cd ../../../../'          # Go back 4 directory levels
alias ......='cd ../../../../../'       # Go back 5 directory levels
alias .......='cd ../../../../../../'    # Go back 6 directory levels 

# bash & cli
alias tmux="TERM=screen-256color-bce tmux"
alias v='nvim'
alias vi='nvim'
alias vim='nvim'
alias dotvim='cd ~/.vim'

# git
alias gb='git branch'
alias gs='git status'
alias gc='git commit'
alias ga='git add'
alias gd='git diff'
alias gl='git log --graph --color=always --format="%C(auto)%h%d %s %C(magenta)%C(bold)%cr by %an"'
alias gf='git fetch'
alias gcl='git clone'
alias gco='git checkout'
alias gps='git push'
alias gpl='git pull --rebase'
alias grs='git restore --staged'
alias gr='git restore'
alias grh='git reset HEAD'
alias grb='git rebase'
alias gst='git stash'
alias gsa='git stash apply'

# docker
alias dc='docker-compose'
alias d='docker'
alias kb='kubectl'

# enable auto-complete for aliases
# note: to find out the completion function, use `complete -p <original-command>`
# complete -o default -F __start_kubectl kb
# complete -o default -F _docker d
# complete -o default -F _docker_compose dc

if [[ "$PLATFORM" == 'Darwin' ]]; then
  alias stree='/Applications/SourceTree.app/Contents/Resources/stree'
fi

# terraform
alias tf='terraform'

# vim: ft=sh
